# update_fastlane

# fastlane/Fastfile
default_platform(:ios)

platform :ios do
  desc "Build the app and distribute it to Firebase App Distribution"
  lane :deploy_firebase do |options|
    # 1. Garante que o ambiente de CI est√° limpo e com um keychain tempor√°rio
    setup_ci(force: true)

    # 2. Sincroniza certificados e perfis de provisionamento (usando o repo privado)
    match(
      type: "development", # ou "development", "adhoc"
      readonly: true # A CI n√£o deve criar novos perfis/certificados
    )

    # 3. Compila o projeto e gera o .ipa
    gym(
      scheme: "Runner",
      export_method: "ad-hoc"
    )

    # 4. Faz o upload para o Firebase
    firebase_app_distribution(
      app: ENV["FIREBASE_APP_ID"],
      firebase_cli_token: ENV["FIREBASE_TOKEN"],
      release_notes: "Novo build dispon√≠vel! üéâ",
      testers: "lorenzo.druzi@icloud.com"
    )

    # 5. Limpa os arquivos tempor√°rios criados pelo setup_ci
    clean_build_artifacts
  end
end
